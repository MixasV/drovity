name: Release

on:
  push:
    tags:
      - "v*"
  workflow_dispatch:

jobs:
  build:
    strategy:
      matrix:
        include:
          - os: ubuntu-latest
            target: x86_64-unknown-linux-gnu
            artifact_name: drovity
            asset_name: drovity-linux-x64
          - os: ubuntu-latest
            target: aarch64-unknown-linux-gnu
            artifact_name: drovity
            asset_name: drovity-linux-arm64
          - os: macos-latest
            target: x86_64-apple-darwin
            artifact_name: drovity
            asset_name: drovity-macos-x64
          - os: macos-latest
            target: aarch64-apple-darwin
            artifact_name: drovity
            asset_name: drovity-macos-arm64
          - os: windows-latest
            target: x86_64-pc-windows-msvc
            artifact_name: drovity.exe
            asset_name: drovity-windows.exe

    runs-on: ${{ matrix.os }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Install Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          targets: ${{ matrix.target }}

      - name: Install cross-compilation tools (Linux ARM)
        if: matrix.target == 'aarch64-unknown-linux-gnu'
        run: |
          sudo apt-get update
          sudo apt-get install -y gcc-aarch64-linux-gnu

      - name: Build
        run: cargo build --release --target ${{ matrix.target }}

      - name: Rename binary
        run: |
          cd target/${{ matrix.target }}/release
          mv ${{ matrix.artifact_name }} ${{ matrix.asset_name }}
        shell: bash

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: ${{ matrix.asset_name }}
          path: target/${{ matrix.target }}/release/${{ matrix.asset_name }}

  release:
    needs: build
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: Display structure
        run: ls -R artifacts

      - name: Create Release
        uses: softprops/action-gh-release@v1
        with:
          files: |
            artifacts/**/*
          draft: false
          prerelease: false
          body: |
            ## ðŸš€ Drovity ${{ github.ref_name }}
            
            Google Gemini API Proxy for Factory Droid
            
            ### ðŸ“¦ Downloads
            - **Linux x64**: `drovity-linux-x64`
            - **Linux ARM64**: `drovity-linux-arm64`
            - **macOS Intel**: `drovity-macos-x64`
            - **macOS Apple Silicon**: `drovity-macos-arm64`
            - **Windows**: `drovity-windows.exe`
            
            ### ðŸ”§ Installation
            
            **Linux/macOS (one-line):**
            ```bash
            curl -fsSL https://raw.githubusercontent.com/${{ github.repository }}/main/install.sh | bash
            ```
            
            **Manual:**
            1. Download the appropriate binary for your system
            2. Make it executable: `chmod +x drovity-*`
            3. Move to PATH: `sudo mv drovity-* /usr/local/bin/drovity`
            
            ### ðŸ“– Usage
            ```bash
            drovity menu  # Start interactive menu
            ```
            
            See [README](https://github.com/${{ github.repository }}) for full documentation.
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
